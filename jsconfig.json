{
	"compilerOptions": {
		"baseUrl": ".",
		"target": "es2016",
		"allowSyntheticDefaultImports": false,
		"paths": {
			"@/*": ["./src/*"],
			"@config/*": ["./src/config/*"],
			"@layout/*": ["./src/layout/*"],
			"@request/*": ["./src/request/*"],
			"@style/*": ["./src/style/*"]
		}
	},
	"exclude": ["node_modules", "dist"],
	"include": ["src"]
}
